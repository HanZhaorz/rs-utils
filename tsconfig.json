{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*", "typings.d.ts", ".eslintrc.js", ".prettierrc.js"]
}
